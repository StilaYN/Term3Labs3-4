<Window x:Class="PhotoEditor.EnterNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoEditor" xmlns:modelview="clr-namespace:PhotoEditor.ModelView" d:DataContext="{d:DesignInstance Type=modelview:EnterNameWindowMV}"
        mc:Ignorable="d"
        Title="EnterName" Height="150" Width="250">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Center" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"><Run Language="ru-ru" Text="Введите имя слоя"/></TextBlock>
        <Button Content="Готово" Command="{Binding Ready}"   Margin="156,38,0,0" VerticalAlignment="Top" Height="38" Width="67"/>

    </Grid>
</Window>
