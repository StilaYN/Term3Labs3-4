<Window x:Class="PhotoEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Load Image" HorizontalAlignment="Left" Margin="560,119,0,0" VerticalAlignment="Top" Height="68" Width="188" Click="LoadButton_Click"/>
        <Image x:Name="ImageArea" HorizontalAlignment="Left" Height="426" VerticalAlignment="Top" Width="351"/>
        <Button Content="Sepia" HorizontalAlignment="Left" Margin="560,217,0,0" VerticalAlignment="Top" Height="68" Width="188" Click="SepiaButton_Click"/>
        <Button Content="Save Image" HorizontalAlignment="Left" Margin="560,333,0,0" VerticalAlignment="Top" Height="68" Width="188" Click="SaveButton_Click"/>
        <Button Content="Rotate 45 Image" HorizontalAlignment="Left" Margin="560,10,0,0" VerticalAlignment="Top" Height="68" Width="188" Click="RotateButton_Click"/>

    </Grid>
</Window>